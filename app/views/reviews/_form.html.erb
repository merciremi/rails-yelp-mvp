<%= simple_form_for [@restaurant, @review] do |f| %>
  <% if @review.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :content, label: 'Your review', error: 'The review is mandatory, please specify one' %>
  <%= f.input :rating, label: 'Rate it!', error: 'The rating is mandatory, please specify one', collection: [ 0, 1, 2, 3, 4, 5] %>
  <%= f.button :submit, "I'm done!" %>
  <!-- [...] all the fields -->
<% end %>
